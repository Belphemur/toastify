<controls:BaseRowEditor x:Class="Toastify.ToastLayout.Controls.RowEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Toastify.ToastLayout.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="450">
    <controls:BaseRowEditor.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}" />
    </controls:BaseRowEditor.Background>
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26">
            <Label VerticalContentAlignment="Center">Volume control mode:</Label>
            <ComboBox VerticalContentAlignment="Center" Margin="6,0,0,0" Name="ComboVolumeControlMode" Width="210"/>
        </StackPanel>
    </StackPanel>
</controls:BaseRowEditor>