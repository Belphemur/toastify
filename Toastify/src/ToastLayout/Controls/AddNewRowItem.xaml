<controls:BaseRowEditor x:Class="Toastify.ToastLayout.Controls.AddNewRowItem"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:controls="clr-namespace:Toastify.ToastLayout.Controls"
                          mc:Ignorable="d"
                          Height="80" d:DesignWidth="450"
                          d:DataContext="{d:DesignInstance local:AddNewToastRowItem}"
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
    <controls:BaseRowEditor.Background>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlLightColorKey}}" />
    </controls:BaseRowEditor.Background>
    <StackPanel Orientation="Horizontal" ScrollViewer.VerticalScrollBarVisibility="Disabled">
        <Button x:Name="BtnAdd" Padding="6,2" Content="Add" ClickMode="Release" Click="BtnAdd_OnClick" />
    </StackPanel>
</controls:BaseRowEditor>